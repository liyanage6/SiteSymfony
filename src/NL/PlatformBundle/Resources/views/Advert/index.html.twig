{# src/NL/PlatformBundle/Resources/views/advert/index.html.twig #}

{% extends "NLPlatformBundle::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block nlplatform_body %}

    <h2>Liste des annonces</h2>

    <ul>
        {% for advert in listAdvert %}
            <li>
                <a href="{{ path('nl_platform_view', {'id': advert.id}) }}">
                    {{ advert.title }}
                </a>
                par {{ advert.author }},
                le {{ advert.date|date('d/m/Y') }}
                {#<br><img src="{{ advert.image.url }}" width="400px" height="150px">#}
            </li>
        {% else %}
            <li>Pas (encore !) d'annonces</li>
        {% endfor %}
    </ul>

    <ul class="pagination">
        {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
        {% for p in range(1, nbPages) %}
            <li{% if p == page %} class="active" {% endif %}>
                <a href="{{ path('nl_platform_home', {'page':p}) }}">{{ p }}</a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}